<mvc:View
    controllerName="project1.controller.ObjectDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <ObjectPageLayout
        id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        alwaysShowContentHeader="false"
        preserveHeaderStateOnScroll="false"
        headerContentPinnable="true"
        isChildPage="true"
        showFooter="false">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="{edit>/Name}" wrapping="true" class="sapUiSmallMarginEnd"/>
                </expandedHeading>
                <snappedHeading>
                    <m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
                        <m:Title text="{edit>/Name}" wrapping="true"/>
                    </m:FlexBox>
                </snappedHeading>
                <navigationActions>
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://decline"
                        press="onCloseDetail"
                        tooltip="{i18n>closeButtonTooltip}"/>
                </navigationActions>
                <actions>
                    <m:ToggleButton
                        id="editToggleBtn"
                        text="{i18n>editButton}"
                        type="Emphasized"
                        press="onEditToggleButtonPress"/>
                    <m:Button
                        text="{i18n>deleteButton}"
                        type="Transparent"
                        press="onDelete"/>
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch" class="sapUiSmallMargin">
                <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                    <m:Label text="{i18n>fieldId}"/>
                    <m:Text text="{edit>/ID}"/>
                </m:VBox>
                <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                    <m:Label text="{i18n>fieldPrice}"/>
                    <m:Text text="{edit>/Price}"/>
                </m:VBox>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection title="{i18n>generalInformationSection}">
                <subSections>
                    <ObjectPageSubSection>
                        <m:VBox id="detailFormContainer" width="100%"/>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>

        <footer>
            <m:OverflowToolbar>
                <m:ToolbarSpacer/>
                <m:Button type="Accept" text="{i18n>saveButton}" enabled="{modelV2>/validate/isFormValid}" press="onSave"/>
                <m:Button type="Reject" text="{i18n>resetButton}" press="onResetChanges"/>
            </m:OverflowToolbar>
        </footer>
    </ObjectPageLayout>
</mvc:View>
